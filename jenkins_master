pipeline {
    agent any

    stages {
        
        stage('Welcome to master'){
            steps{
                echo 'Start Program'
            }
        }

        stage('Tigger the Slave Jobs') {
            steps {
            script {
                    def file = readFile "./data.txt"
                    def lines = file.readLines()[0].split(' ')
                    env.fullName = lines[0] + " " + lines[1]
                    env.height = lines[2]
                    env.weight = lines[3]
                    env.age = lines[4]
                }
                echo 'Start Trigger to send name and age to slave'
                build job: 'slave', parameters: [string(name: 'FULLNAME', value: "$fullName"), string(name: 'HEIGHT', value: "$height"), string(name: 'WEIGHT', value: "$weight"), string(name: 'AGE', value: "$age")]
            }
        }
    }
}
